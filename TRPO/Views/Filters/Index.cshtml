<form method="post" asp-controller="Filters" asp-action="Check">
    <div class="filters_line">
        <p>Цена</p>
        <p>От:<input class="short_input" name="PriceFrom"> </input></p>
        <p>До:<input class="short_input" name="PriceTo"> </input></p>
